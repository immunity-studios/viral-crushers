<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.MonsterDeletePage"
             Title="{Binding Title}">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" IconImageSource="icon_cancel.png"/>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" IconImageSource="icon_delete.png"/>
    </ContentPage.ToolbarItems>

    <ScrollView
            HorizontalOptions="CenterAndExpand">
        <StackLayout 
                Padding="20" HorizontalOptions="Center">

            <Frame Padding="5">
                <Grid RowSpacing="5" ColumnSpacing="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>

                    <Image Grid.Row="0"
                            Grid.Column="0"
                            Grid.RowSpan="3"
                            Source="{Binding Data.ImageURI}"
                            WidthRequest="90"
                            HeightRequest="90"
                            HorizontalOptions="Center"
                            Aspect="AspectFit" 
                            Style="{StaticResource ImageLargeStyle}"/>

                    <Label Grid.Row="3" 
                            Grid.Column="0"
                            Text="{Binding Data.Name}"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            FontSize="Micro"
                            TextColor="White"/>

                    <Label Grid.Row="0"
                           Grid.Column="1"
                           Text="Attack"
                           TextColor="White"/>

                    <ProgressBar
                        Grid.Row="0"
                        Grid.Column="2"
                        Progress="{Binding Data.Attack, Converter={StaticResource StatToPercentageConverter}}" 
                        Style="{StaticResource StatsProgressBar}"/>

                    <Label Grid.Row="0"
                           Grid.Column="3"
                           Text="{Binding Data.Attack}"
                           TextColor="White"/>

                    <Label Grid.Row="1"
                           Grid.Column="1"
                           Text="Defense"
                           TextColor="White"/>

                    <ProgressBar
                        Grid.Row="1"
                        Grid.Column="2"
                        Progress="{Binding Data.Defense, Converter={StaticResource StatToPercentageConverter}}"
                        Style="{StaticResource StatsProgressBar}"/>

                    <Label Grid.Row="1"
                           Grid.Column="3"
                           Text="{Binding Data.Defense}"
                           TextColor="White"/>

                    <Label Grid.Row="2"
                           Grid.Column="1"
                           Text="Speed"
                           TextColor="White"/>

                    <ProgressBar
                        Grid.Row="2"
                        Grid.Column="2"
                        Progress="{Binding Data.Speed, Converter={StaticResource StatToPercentageConverter}}"
                        Style="{StaticResource StatsProgressBar}" />

                    <Label Grid.Row="2"
                           Grid.Column="3"
                           Text="{Binding Data.Speed}"
                           TextColor="White"/>

                </Grid>
            </Frame>

            <StackLayout 
            HorizontalOptions="Center" 
            Padding="20">

                <Label Text="Really delete this?" Style="{StaticResource MessageStyle}"/>

                <Button 
                Text="Yes" 
                Clicked="Delete_Clicked" 
                HorizontalOptions="Center"
                FontSize="Medium"
                BorderWidth="1" 
                BorderColor="black">
                </Button>
            </StackLayout>
            
        </StackLayout>
    </ScrollView>
</ContentPage>