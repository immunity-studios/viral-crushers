<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Game.Views"
             mc:Ignorable="d"
             x:Name="BrowseItemsPage"
             x:Class="Game.Views.MonsterIndexPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="AddItem_Clicked" IconImageSource="icon_add.png"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <views:CurvedLabelControl
               Text="Monsters"
               Style="{StaticResource RedCurvedLabel}"
               FrameHorizontalOptions="Center"
               Margin="0,100,0,0" />

            <CollectionView
                Grid.Row="1"
                ItemsSource="{Binding Dataset}"
                SelectionMode="Single"
                SelectionChanged="CollectionView_SelectionChanged"
                x:Name="MonstersCollectionView">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout
                        Orientation="Vertical"
                         Span="3"
                         VerticalItemSpacing="20" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Image
                                Grid.Row="0"                                
                                Source="{Binding ImageURI}"
                                Style="{StaticResource ImageLargeStyle}"/>

                            <views:CurvedLabelControl
                                Grid.Row="1"
                                Text="{Binding Name}"
                                Style="{StaticResource YellowCurvedLabel}" />

                        </Grid>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <views:ToolbarMenuControl Grid.Row="2"/>

        </Grid>

    </ContentPage.Content>
</ContentPage>