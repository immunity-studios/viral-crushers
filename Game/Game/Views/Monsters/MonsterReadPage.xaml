<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Game.Views.MonsterReadPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Update" Clicked="Update_Clicked" IconImageSource="icon_edit.png"/>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" IconImageSource="icon_delete.png"/>
    </ContentPage.ToolbarItems>


    <ScrollView>
        <StackLayout Style="{StaticResource OuterBoxStack}"
            Spacing="10">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <Image Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargeStyle}"/>

                <StackLayout Grid.Column="1"
                             HorizontalOptions="Fill">

                    <Label 
                        Text="{Binding Data.Name}" 
                        TextTransform="Uppercase"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        Style="{DynamicResource BodyStyle}"/>

                    <!--<Frame 
                           CornerRadius="5"
                           Padding="8">
                        <StackLayout>
                            <Label Text="Name"
                                   FontSize="Small"/>

                            <BoxView 
                                     HeightRequest="2"
                                     HorizontalOptions="Fill" />
                            <Label 
                                    Text="{Binding Data.Name}" 
                                    FontAttributes="Bold"
                                    FontSize="Medium"
                                    Style="{StaticResource ValueStyle}"/>

                            <Label Text="Description"
                                   FontSize="Small"/>

                            <BoxView 
                                     HeightRequest="2"
                                     HorizontalOptions="Fill" />
                            <Label 
                                    Text="{Binding Data.Description}" 
                                    FontAttributes="Bold"
                                    FontSize="Medium"
                                    Style="{StaticResource ValueStyle}"/>
                            
                        </StackLayout>
                    </Frame>-->

                    <Label 
                        Text="{Binding Data.Description}" 
                        LineBreakMode="WordWrap"
                        FontAttributes="Italic" 
                        Style="{StaticResource ValueStyle}"/>

                </StackLayout>
                
            </Grid>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackLayout>
                    <StackLayout Style="{StaticResource HorizontalStack}">
                        <Label 
                            Text="Max Health : " 
                            Style="{StaticResource LabelStyle}"/>
                        <Label 
                            Text="{Binding Data.MaxHealth}" 
                            Style="{StaticResource ValueStyle}"/>
                    </StackLayout>

                    <BoxView 
                            Color="#A32F2F"
                            WidthRequest="{Binding Data.MaxHealth}"
                            HorizontalOptions="Start"
                            VerticalOptions="Start"/>
                </StackLayout>

                <StackLayout Grid.Column="1">
                    <StackLayout                    
                        Style="{StaticResource HorizontalStack}">
                    
                        <Label 
                            Text="Range : " 
                            Style="{StaticResource LabelStyle}"/>
                        <Label 
                            Text="{Binding Data.Range}" 
                            Style="{StaticResource ValueStyle}"/>
                    </StackLayout>

                    <BoxView 
                        Color="Blue"
                        WidthRequest="{Binding Data.Range}"
                        HorizontalOptions="Start"
                        VerticalOptions="Start"/>
                </StackLayout>

                <StackLayout 
                    Grid.Row="1">
                    <StackLayout 
                        Style="{StaticResource HorizontalStack}">
                    
                        <Label 
                            Text="Attack : " 
                            Style="{StaticResource LabelStyle}"/>
                        <Label 
                            Text="{Binding Data.Attack}" 
                            Style="{StaticResource ValueStyle}"/>
                    </StackLayout>

                    <BoxView 
                        Color="Yellow"
                        WidthRequest="{Binding Data.Attack}"
                        HorizontalOptions="Start"
                        VerticalOptions="Start"/>
                </StackLayout>

                <StackLayout 
                    Grid.Row="1"
                    Grid.Column="1">
                    <StackLayout
                        Style="{StaticResource HorizontalStack}"
                        HorizontalOptions="Start">
                    
                        <Label 
                            Text="Defense : " 
                            Style="{StaticResource LabelStyle}"/>
                        <Label 
                            Text="{Binding Data.Defense}" 
                            Style="{StaticResource ValueStyle}"/>
                    </StackLayout>

                    <BoxView 
                        Color="Green"
                        WidthRequest="{Binding Data.Defense}"
                        HorizontalOptions="Start"
                        VerticalOptions="Start"/>
                </StackLayout>

                <StackLayout 
                    Grid.Row="2">
                    <StackLayout 
                        Style="{StaticResource HorizontalStack}">
                    
                        <Label 
                            Text="Speed : "                        
                            Style="{StaticResource LabelStyle}"/>
                        <Label 
                            Text="{Binding Data.Speed}" 
                            Style="{StaticResource ValueStyle}"/>
                    </StackLayout>

                    <BoxView 
                        Color="Purple"
                        WidthRequest="{Binding Data.Speed}"
                        HorizontalOptions="Start"
                        VerticalOptions="Start"/>
                </StackLayout>
            </Grid>

        </StackLayout>
    </ScrollView>
</ContentPage>