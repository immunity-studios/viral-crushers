<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Game.Views.ToolbarMenuControl"
    BackgroundColor="{StaticResource ViralCrusherWhiteColor}">

    <ContentView.Content>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Column="0"
                         HorizontalOptions="Center"
                         >
                <ImageButton
                    x:Name="CharactersImageButton"
                    Source="icon_menu_characters_girl.png"
                    Style="{StaticResource ToolbarMenuImageButtonStyle}"
                    Clicked="CharacterButton_Clicked"/>

                <Label Text="Characters"
                       FontSize="Micro"
                       FontAttributes="Bold"
                       TextColor="#273995"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>    
            
                <!--<ImageButton
                    x:Name="CharactersImageButton"
                    Source="icon_menu_characters_girl.png"
                    Style="{StaticResource ToolbarMenuImageButtonStyle}"
                    Clicked="CharacterButton_Clicked"/>-->


            <StackLayout Grid.Column="1"
                         HorizontalOptions="Center">
                <ImageButton 
                    x:Name="MonstersImageButton"
                    Source="menu_monster_icon_100.png"
                    Style="{StaticResource ToolbarMenuImageButtonStyle}"
                    Clicked="MonsterButton_Clicked"/>

                <Label Text="Monsters"
                       FontSize="Micro"
                       FontAttributes="Bold"
                       TextColor="#273995"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>
            
                <!--<ImageButton Grid.Column="1"
                    x:Name="MonstersImageButton"
                    Source="menu_monster_icon_100.png"
                    Style="{StaticResource ToolbarMenuImageButtonStyle}"
                    Clicked="MonsterButton_Clicked"/>-->

            <StackLayout Grid.Column="2"
                         HorizontalOptions="Center">
                <ImageButton 
                    x:Name="GamePageImageButton"
                    Source="menu_battle_icon_100.png"
                    Style="{StaticResource ToolbarMenuImageButtonStyle}"
                    Clicked="DungeonButton_Clicked" />

                <Label Text="Battle"
                       FontSize="Micro"
                       FontAttributes="Bold"
                       TextColor="#273995"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>

                <!--<ImageButton Grid.Column="2"
                    x:Name="GamePageImageButton"
                    Source="menu_battle_icon_100.png"
                    Style="{StaticResource ToolbarMenuImageButtonStyle}"
                    Clicked="DungeonButton_Clicked" />-->

            <StackLayout Grid.Column="3"
                         HorizontalOptions="Center">
                <ImageButton 
                    x:Name="ItemsImageButton"
                    Source="menu_items_icon_100.png"
                    Style="{StaticResource ToolbarMenuImageButtonStyle}"
                    Clicked="ItemButton_Clicked" />

                <Label Text="Items"
                       FontSize="Micro"
                       FontAttributes="Bold"
                       TextColor="#273995"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>
            

                <!--<ImageButton Grid.Column="3"
                    x:Name="ItemsImageButton"
                    Source="menu_items_icon_100.png"
                    Style="{StaticResource ToolbarMenuImageButtonStyle}"
                    Clicked="ItemButton_Clicked" />-->

            <StackLayout Grid.Column="4"
                         HorizontalOptions="Center">
                <ImageButton Grid.Column="4"
                    x:Name="ScoresImageButton"
                    Source="menu_score_icon_100.png"
                    Style="{StaticResource ToolbarMenuImageButtonStyle}"
                    Clicked="ScoreButton_Clicked" />

                <Label Text="Scores"
                       FontSize="Micro"
                       FontAttributes="Bold"
                       TextColor="#273995"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>

                <!--<ImageButton Grid.Column="4"
                    x:Name="ScoresImageButton"
                    Source="menu_score_icon_100.png"
                    Style="{StaticResource ToolbarMenuImageButtonStyle}"
                    Clicked="ScoreButton_Clicked" />-->

        </Grid>

    </ContentView.Content>
</ContentView>
