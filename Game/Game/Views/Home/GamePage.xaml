<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Game.Views"
             x:Class="Game.Views.GamePage">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="About" Clicked="AboutButton_Clicked" IconImageSource="tab_about.png"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>

        <Grid x:Name="PageGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <views:BackButtonControl HorizontalOptions="Start"
                                     Margin="30,50,0,0"/>

            <!--<Image Grid.Row="1"
                   Source="icon_hospital.png"
                   Style="{StaticResource ImageLargeStyle}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                />-->
            <Frame Grid.Row="1"
                   CornerRadius="50"
                   WidthRequest="220"
                   HeightRequest="220"
                   BackgroundColor="{StaticResource ViralCrusherGreenColor}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HasShadow="True"/>
                                      

            <StackLayout Grid.Row="2" Style="{StaticResource CardImageTextBox}">

                <ImageButton
                        Source="item.png"
                        Style="{StaticResource ImageMediumStyle}"
                        Clicked="DungeonButton_Clicked"/>

                <Label 
                        Text="Dungeon/Battle"
                        Style="{StaticResource CenterMessageStyle}"/>
            </StackLayout>

            <StackLayout Grid.Row="3" Style="{StaticResource CardImageTextBox}">

                <ImageButton
                        Source="item.png"
                        Style="{StaticResource ImageSmallStyle}"
                        Clicked="AutobattleButton_Clicked"/>

                <Label 
                        Text="Auto Battle"
                        Style="{StaticResource CenterMessageStyle}"/>
            </StackLayout>


            <views:ToolbarMenuControl Grid.Row="4" />
        </Grid>
    </ContentPage.Content>
</ContentPage>