<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.GamePage"
             Title="Game"
             >

    <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Image
                Source="icon_hospital.png"
                Style="{StaticResource ImageLargeStyle}"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                />

            <StackLayout Grid.Row="1" Style="{StaticResource CardImageTextBox}">

                <ImageButton
                        Source="item.png"
                        Style="{StaticResource ImageMediumStyle}"
                        Clicked="DungeonButton_Clicked"/>

                <Label 
                        Text="Dungeon/Battle"
                        Style="{StaticResource CenterMessageStyle}"/>
            </StackLayout>

            <StackLayout Grid.Row="2" Style="{StaticResource CardImageTextBox}">

                <ImageButton
                        Source="item.png"
                        Style="{StaticResource ImageSmallStyle}"
                        Clicked="AutobattleButton_Clicked"/>

                <Label 
                        Text="Auto Battle"
                        Style="{StaticResource CenterMessageStyle}"/>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>