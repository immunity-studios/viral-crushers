<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local_helpers="clr-namespace:Game.Helpers"
             xmlns:local="using:Game.Models"
             xmlns:local_enum="clr-namespace:Game.Models"
             xmlns:views="clr-namespace:Game.Views"
             x:Class="Game.Views.ItemUpdatePage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local_helpers:StringEnumConverter x:Key="StringEnum"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>

        <ScrollView>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <views:CurvedLabelControl
               Text="Edit"
               Style="{StaticResource RedCurvedLabel}"
               HorizontalOptions="Center"
               FramePadding="30,0,30,20"
               Margin="0,60,0,-20" />

                <Frame Grid.Row="1"
                       Margin="5,0,5,10"
                       BackgroundColor="{StaticResource ViralCrusherBlueColor}"
                       BorderColor="Transparent"
                       HasShadow="True">

                    <StackLayout
                        Style="{StaticResource OuterBoxStack}"
                        Padding="20"
                        Spacing="10">
                        <Grid
                        RowSpacing="10"
                        ColumnSpacing="10">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            
                            <!--Item Image-->
                            <Frame
                                Grid.RowSpan="5"
                                Style="{StaticResource BorderFrame}">

                                <Frame
                                    Padding="10"
                                    Style="{StaticResource CharacterFrame}">

                                    <Image x:Name="ItemImage"
                                        Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargeStyle}"/>
                                </Frame>
                            </Frame>
                            
                            
                            <!--Item Name--> 
                            <StackLayout Orientation="Vertical" Grid.Column="1"  HorizontalOptions="Fill">
                                <Label Text="Name" 
                                        Style="{StaticResource LabelStyle}"/>

                                <Entry Text="{Binding Data.Name}"
                                        HorizontalOptions="Fill"
                                        Style="{StaticResource EntryStyle}"/>
                            </StackLayout>

                            
                            <!--Item Type label and picker-->
                            <StackLayout Orientation="Vertical" Grid.Column="1" Grid.Row="1" HorizontalOptions="Fill">
                                <Label Text="Type" 
                                        Style="{StaticResource LabelStyle}"/>

                                <Picker ItemsSource="{x:Static local_enum:ItemTypeEnumHelper.GetListItem}" 
                                    SelectedItem="{Binding Data.ItemType, Converter={StaticResource ItemTypeToMappedStringConverter}, Mode=TwoWay}" 
                                    x:Name="ItemTypePicker"
                                        SelectedIndexChanged="OnItemTypePickerSelectedIndexChanged"/>
                            </StackLayout>

                            
                            <!--Item Description-->
                            <StackLayout Style="{StaticResource VerticalStack}" HorizontalOptions="Fill" Grid.Column="1" Grid.Row="2">
                                <Label Text="Description" 
                                        Style="{StaticResource LabelStyle}"/>

                                <Entry Text="{Binding Data.Description}"
                                        Style="{StaticResource EntryStyle}" />
                            </StackLayout>

                            
                            <!--Item Location label and picker-->
                            <StackLayout Orientation="Vertical" Grid.Column="1" Grid.Row="3" HorizontalOptions="Fill">
                                <Label Text="Location" 
                                        Style="{StaticResource LabelStyle}"/>

                                <Picker Grid.Row="3" Grid.Column="1"
                        ItemsSource="{x:Static local:ItemLocationEnumHelper.GetListCharacter}" 
                        SelectedItem="{Binding Data.Location, Converter={StaticResource ItemLocationToMappedStringConverter}, Mode=TwoWay}" 
                        x:Name="LocationPicker"/>

                            </StackLayout>


                            <!--Item Attribute label and picker-->
                            <StackLayout Orientation="Vertical" Grid.Column="1" Grid.Row="4" HorizontalOptions="Fill">
                                <Label Text="Attribute" 
                                        Style="{StaticResource LabelStyle}"/>

                                <Picker Grid.Row="4" Grid.Column="1"
                        ItemsSource="{x:Static local:AttributeEnumHelper.GetListCharacter}"
                        SelectedItem="{Binding Data.Attribute, Converter={StaticResource StringEnum}, Mode=TwoWay}" 
                        x:Name="AttributePicker"/>

                            </StackLayout>

                        </Grid>


                        <Grid x:Name="SlidersRegionGrid" RowSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--Range-->
                            <views:CurvedLabelControl Style="{StaticResource WhiteCurvedLabelWithNavyText}"
                                                          Text="Range"/>

                            <Slider Grid.Column="1"
                                        x:Name="RangeSlider"                                       
                                        Maximum="10"
                                        Minimum="0"
                                        Value="{Binding Data.Range, Mode=TwoWay}" />

                            <views:CurvedLabelControl Grid.Column="2"
                                        Text="{Binding Path=Value, Source={x:Reference RangeSlider}, StringFormat='{0:F0}'}"
                                        Style="{StaticResource WhiteCurvedLabelWithNavyText}" />


                            <!--Value-->
                            <views:CurvedLabelControl Grid.Row="1"
                                                          Style="{StaticResource WhiteCurvedLabelWithNavyText}"
                                                          Text="Value"/>

                            <Slider Grid.Row="1"
                                        Grid.Column="1"
                                        x:Name="ValueSlider"                                       
                                        Maximum="20"
                                        Minimum="0"
                                        Value="{Binding Data.Value, Mode=TwoWay}" />

                            <views:CurvedLabelControl Grid.Row="1"
                                        Grid.Column="2"
                                        Text="{Binding Path=Value, Source={x:Reference ValueSlider}, StringFormat='{0:F0}'}"
                                        Style="{StaticResource WhiteCurvedLabelWithNavyText}" />


                            <!--Damage-->
                            <views:CurvedLabelControl Grid.Row="2"
                                                          Style="{StaticResource WhiteCurvedLabelWithNavyText}"
                                                          Text="Damage"/>

                            <Slider Grid.Row="2"
                                        Grid.Column="1"
                                        x:Name="DamageSlider"                                       
                                        Maximum="10"
                                        Minimum="0"
                                        Value="{Binding Data.Damage, Mode=TwoWay}" />

                            <views:CurvedLabelControl Grid.Row="2"
                                        Grid.Column="2"
                                        Text="{Binding Path=Value, Source={x:Reference DamageSlider}, StringFormat='{0:F0}'}"
                                        Style="{StaticResource WhiteCurvedLabelWithNavyText}" />

                        </Grid>

                        
                        <!--Save and cancel buttons-->
                        <Grid x:Name="BottomButtonsRegionGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <ImageButton Source="save_button_140.png" Clicked="Save_Clicked" />
                            <ImageButton Grid.Column="1" Source="cancel_button_140.png" Clicked="Cancel_Clicked" />
                        </Grid>

                    </StackLayout>
                </Frame>
            </Grid>

        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>