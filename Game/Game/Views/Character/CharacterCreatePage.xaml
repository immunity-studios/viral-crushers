<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:views="clr-namespace:Game.Views"
             xmlns:local_enum="clr-namespace:Game.Models"
             x:Class="Game.Views.CharacterCreatePage">
    <ContentPage.Content>

        <ScrollView>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

           <views:CurvedLabelControl
               Text="Create"
               Style="{StaticResource RedCurvedLabel}"
               FrameHorizontalOptions="Center"
               FramePadding="30,0,30,20"
               Margin="0,10,0,-20" />
                <Frame Grid.Row="1"  BackgroundColor="{StaticResource ViralCrusherBlueColor}" BorderColor="Transparent" HasShadow="False">

                    <StackLayout Style="{StaticResource OuterBoxStack}"
                         Padding="20"
                         Spacing="10">

                        <Grid RowSpacing="10" ColumnSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>

                            <Frame Grid.RowSpan="2" Style="{StaticResource BorderFrame}">
                                <Frame Padding="10" Style="{StaticResource CharacterFrame}">
                                    <Image Source="{Binding Data.ImageURI}" Style="{StaticResource ImageLargeStyle}"/>
                                </Frame>
                            </Frame>
                            <StackLayout Orientation="Vertical" Grid.Column="1"  HorizontalOptions="Fill">
                                <Label Text="Name" 
                                       Style="{StaticResource LabelStyle}"/>
                    
                                <Entry Text="{Binding Data.Name}"
                                       HorizontalOptions="Fill"
                                       Style="{StaticResource EntryStyle}"/>
                            </StackLayout>

                            <StackLayout Style="{StaticResource VerticalStack}" HorizontalOptions="Fill" Grid.Column="1" Grid.Row="1">
                                <Label Text="Description" 
                                       Style="{StaticResource LabelStyle}"/>
                    
                                <Entry Text="{Binding Data.Description}"
                                       Style="{StaticResource EntryStyle}" />
                            </StackLayout>
                        </Grid>

                        <StackLayout Style="{StaticResource VerticalStack}" HorizontalOptions="FillAndExpand">
                        
                            <Label Text="Level"
                                    Style="{StaticResource LabelStyle}" />

                            <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0">
                                <Label 
                                    Text="{Binding Data.Level, Mode=OneWay}"
                                    x:Name="LevelValue"
                                    Style="{StaticResource ValueStyle}"
                                    Padding="0,0,10,0"
                                    HorizontalOptions="End"
                                    HorizontalTextAlignment="End"/>
                                <Stepper Minimum="1" Maximum="10"
                                            Value="{Binding Data.Level, Mode=TwoWay}"
                                            ValueChanged="Level_OnStepperValueChanged"/>
                            </StackLayout>

                            <Label 
                                    Text="Max Health" 
                                    Style="{StaticResource LabelStyle}"/>

                            <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0,10,0">

                                <Label Text="{Binding Data.Range}"
                                        x:Name="MaxHealthValue"
                                        Style="{StaticResource ValueStyle}"
                                        Padding="0,0,10,0"
                                        HorizontalOptions="End"
                                        HorizontalTextAlignment="End"/> 
                                <Stepper Value="{Binding Data.MaxHealth, Mode=TwoWay}"
                                            ValueChanged="MaxHealth_OnStepperValueChanged"/>

                            </StackLayout>


                            <Label 
                                Text="Attack"
                                Style="{StaticResource LabelStyle}"/>

                            <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0,10,0">
                        
                                <Label 
                                    Text="{Binding Data.Attack}" 
                                    x:Name="AttackValue"
                                    Style="{StaticResource ValueStyle}"
                                    Padding="0,0,10,0"
                                    HorizontalOptions="End"
                                    HorizontalTextAlignment="End"/>

                                <Stepper 
                                    Value="{Binding Data.Attack, Mode=TwoWay}"
                                    ValueChanged="Attack_OnStepperValueChanged"/>

                            </StackLayout>

                            <Label 
                                Text="Defense" 
                                Style="{StaticResource LabelStyle}"/>
                    
                            <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0,10,0">

                                <Label 
                                    Text="{Binding Data.Defense}" 
                                    x:Name="DefenseValue"
                                    Style="{StaticResource ValueStyle}"
                                    Padding="0,0,10,0"
                                    HorizontalOptions="End"
                                    HorizontalTextAlignment="End"/>

                                <Stepper 
                                    Value="{Binding Data.Defense, Mode=TwoWay}"
                                    ValueChanged="Defense_OnStepperValueChanged"/>
                    
                            </StackLayout>

                            <Label 
                                Text="Speed" 
                                Style="{StaticResource LabelStyle}"/>

                            <StackLayout Style="{StaticResource HorizontalStack}" Padding="10,0,10,0">

                                <Label 
                                    Text="{Binding Data.Speed}" 
                                    x:Name="SpeedValue"
                                    Style="{StaticResource ValueStyle}"
                                    Padding="0,0,10,0"
                                    HorizontalOptions="End"
                                    HorizontalTextAlignment="End"/>

                                <Stepper 
                                    Value="{Binding Data.Speed, Mode=TwoWay}"
                                    ValueChanged="Speed_OnStepperValueChanged"/>

                            </StackLayout>
                        </StackLayout>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <ImageButton Source="save_button_140.png" Clicked="Save_Clicked" />
                            <ImageButton Grid.Column="1" Source="cancel_button_140.png" Clicked="Cancel_Clicked" />
                        </Grid>
                    </StackLayout>
                </Frame>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>